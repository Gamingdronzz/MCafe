<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    android:orientation="vertical"
    tools:context=".MemberProfile">

    <LinearLayout
        android:id="@+id/linear_layout_member_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/member_profile_Profile_Picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center" />

        <android.support.v7.widget.RecyclerView

            android:id="@+id/recycler_view_member_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLightGray"
            android:padding="5dp"
            android:scrollbars="vertical" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/progress_layout_member_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <include
            layout="@layout/crystal_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

        </include>


    </RelativeLayout>

</RelativeLayout>
