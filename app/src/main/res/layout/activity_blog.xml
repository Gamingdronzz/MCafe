<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BlogActivity">

    <com.daasuu.ahp.AnimateHorizontalProgressBar
        android:id="@+id/progress_bar_blog_activity"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        app:ahp_backgroundColor="@color/colorPrimary"
        app:ahp_progressColor="@color/colorAccent"></com.daasuu.ahp.AnimateHorizontalProgressBar>


    <android.webkit.WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.webkit.WebView>


</LinearLayout>
